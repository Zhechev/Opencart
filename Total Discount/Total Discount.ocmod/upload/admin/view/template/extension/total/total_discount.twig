{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-coupon" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
      <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-total_discount" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-count"><span data-toggle="tooltip" data-html="true" data-trigger="click" title="{{ help_count|escape }}">{{ entry_count }}</span></label>
            <div class="col-sm-10"><input type="text" name="total_total_discount_count" value="{{ total_total_discount_count }}" class="form-control" /></div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-percent"><span data-toggle="tooltip" data-html="true" data-trigger="click" title="{{ help_percent|escape }}">{{ entry_percent }}</span></label>
            <div class="col-sm-10"><input type="text" name="total_total_discount_percent" value="{{ total_total_discount_percent }}" class="form-control"/></div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-each">{{ entry_each }}</label>
            <div class="col-sm-10">
              <select name="total_total_discount_each_count" class="form-control">
                {% if total_total_discount_each_count %}
                <option value="1" selected="selected">{{ text_each }}</option>
                <option value="0">{{ text_once }}</option>
                {% else %}
                <option value="1">{{ text_each }}</option>
                <option value="0" selected="selected">{{ text_once }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-category">{{ entry_category }}</label>
            <div class="col-sm-10">
                <div class="well well-sm" style="height: 300px; overflow: auto;">
                    {% set class = 'odd' %}
          {% for category in categories %}
          {% if class == 'even' %}
            {% set class = 'odd' %}
          {% else %}
            {% set class = 'even' %}
          {% endif %}
                    <div class="{{ class }}">
                      {% if category.category_id in total_total_discount_category %}
                      <input type="checkbox" name="total_total_discount_category[]" value="{{ category.category_id }}" checked="checked" />
                      {{ category.name }}
                      {% else %}
                      <input type="checkbox" name="total_total_discount_category[]" value="{{ category.category_id }}" />
                      {{ category.name }}
                      {% endif %}
                    </div>
                    {% endfor %}
                  </div>
                <a onclick="$(this).parent().find(':checkbox').attr('checked', true);">{{ text_select_all }}</a> / <a onclick="$(this).parent().find(':checkbox').attr('checked', false);">{{ text_unselect_all }}</a>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-manufacturer">{{ entry_manufacturer }}</label>
            <div class="col-sm-10">
                <div class="well well-sm" style="height: 140px; overflow: auto;">
          {% set class = 'odd' %}
          {% for manufacturer in manufacturers %}
          {% if class == 'even' %}
            {% set class = 'odd' %}
          {% else %}
            {% set class = 'even' %}
          {% endif %}
                    <div class="{{ class }}">
            {% if manufacturer.manufacturer_id in total_total_discount_manufacturer %}
                      <input type="checkbox" name="total_total_discount_manufacturer[]" value="{{   manufacturer.manufacturer_id }}" checked="checked" />
                      {{ manufacturer.name }}
                      {% else %}
                      <input type="checkbox" name="total_total_discount_manufacturer[]" value="{{ manufacturer.manufacturer_id }}" />
                      {{ manufacturer.name }}
                      {% endif %}
                    </div>
                    {% endfor %}
                  </div>
                  <a onclick="$(this).parent().find(':checkbox').attr('checked', true);">{{ text_select_all }}</a> / <a onclick="$(this).parent().find(':checkbox').attr('checked', false);">{{ text_unselect_all }}</a>
              </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="total_total_discount_status" id="input-status" class="form-control">
                {% if total_total_discount_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="total_total_discount_sort_order" value="{{ total_total_discount_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
      </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}